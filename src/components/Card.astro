---
const { title, className } = Astro.props;
---

<div
  class:list={[
    "w-full border-1 border-neutral-300 dark:border-neutral-600 rounded-xs px-2 py-1 flex flex-col gap-2",
    className,
  ]}
>
  {
    title && (
      <>
        <h1 class="text-2xl font-semibold text-neutral-900 dark:text-neutral-200">
          {title}
        </h1>
        <hr class="border-neutral-300 dark:border-neutral-600" />
      </>
    )
  }
  <slot />
</div>
