---
const { title, className } = Astro.props;
---

<div
  class:list={[
    "border-2 border-gray-300 rounded-xs px-2 py-1 flex flex-col gap-2",
    className,
  ]}
>
  {
    title && (
      <>
        <h1 class="text-2xl font-semibold">
          {title}
        </h1>
      </>
    )
  }

  <slot />
</div>
