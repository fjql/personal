---
const { id, ctf, rank, date } = Astro.props;
---

<a href={id}>
  <div
    class="border-1 border-neutral-300 dark:border-neutral-600 rounded-xs px-2 py-1 flex flex-col gap-0"
  >
    <p class="text-sm text-neutral-600 dark:text-neutral-300">
      {date.toLocaleDateString()}
    </p>
    <h1 class="text-xl font-semibold text-neutral-900 dark:text-neutral-200">
      {ctf}
    </h1>
    {
      rank && (
        <p class="text-neutral-600 dark:text-neutral-300">{rank}</p>
      )
    }
  </div>
</a>
