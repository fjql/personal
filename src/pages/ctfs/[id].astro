---
import { getCollection, render } from "astro:content";

import CTFLayout from "../../layouts/CTFLayout.astro";

export const getStaticPaths = async () => {
  const ctfs = await getCollection("ctfs");

  return ctfs.map((post) => {
    return { params: { id: post.id }, props: { post } };
  });
};

const { post } = Astro.props;
const { Content } = await render(post);

const { ctf, team, rank, date } = post.data;
---

<CTFLayout ctf={ctf} team={team} rank={rank} date={date}>
  <Content />
</CTFLayout>
