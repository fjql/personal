---
import { getCollection, render } from "astro:content";

import ConstructionTape from "../../components/ConstructionTape.astro";
import CTFLayout from "../../layouts/CTFLayout.astro";

export const getStaticPaths = async () => {
  const ctfs = await getCollection("ctfs");

  return ctfs.map((post) => {
    return { params: { id: post.id }, props: { post } };
  });
};

const { post } = Astro.props;
const { Content } = await render(post);

const { ctf, team, rank, points, date } = post.data;
---

<CTFLayout ctf={ctf} team={team} rank={rank} points={points} date={date}>
  {
    post.body ? (
      <Content />
    ) : (
      <ConstructionTape title="Content not yet added" />
    )
  }
</CTFLayout>
